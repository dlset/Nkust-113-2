@model IEnumerable<C110152310.Models.CourseSelection>
@{
    ViewData["Title"] = "我的課程";
}
<div class="container mt-4">
    <h2 class="mb-4">我的已選課程</h2>
    <a class="btn btn-secondary mb-3" asp-action="Index">回課程列表</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>課程名稱</th>
                <th>描述</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Course?.Name</td>
                <td>@item.Course?.Description</td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="Drop" asp-route-id="@item.CourseId">退選</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
